{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "nyc": {
    "exclude": [
      "helpers/",
      "__tests__/*"
    ]
  },
  "scripts": {
    "start": "babel-node ./index.js",
    "server": "DEBUG=dev nodemon --exec babel-node .",
    "pretest": "NODE_ENV=test npm run migrate:undo && cross-env NODE_ENV=test npm run migrate && cross-env NODE_ENV=test npm run seedall",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --exit --timeout 10000  --require @babel/register ./__tests__/*.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "migrate": "cross-env NODE_ENV=test && sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seedall": "sequelize db:seed:all",
    "heroku-postbuild": "npm run migrate",
    "dev:migrate": "sequelize db:migrate"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "express-validator": "^6.1.1",
    "faker": "^4.1.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "pusher": "^2.2.2",
    "request": "^2.87.0",
    "sequelize": "^5.10.2",
    "sequelize-cli": "^5.5.0",
    "swagger-ui-express": "^4.0.7",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.5",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "jwt-decode": "^2.2.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "uuid": "^3.3.2"
  }
}
